---
import { formatCurrency } from "@/utils";

interface Props {
  title: string;
  href: string;
  img: string;
  price: number;
  imgSize?: string;
};

const { title, href, img, price, imgSize } = Astro.props;

---
<div class="grid grid-rows-[100px_1fr]">
  <div class={`flex ${imgSize || "w-36"} justify-center m-auto -rotate-12 translate-y-1`}>
    <a 
      class="w-full h-full"
      href={href}
      transition:name=`media-image-${href}`
    >
      <img
        class="w-full h-full object-contain transition-all duration-300 ease-in-out hover:rotate-12"
        src={img}
        alt={title}
        loading="lazy"
      />
    </a>
  </div>
  <a href={href} class="bg-blue flex flex-col gap-2 items-center justify-end h-52 rounded-3xl p-4 pt-6 border border-border">
    <p class="text-white text-lg text-center inline-block hover:underline">
      {title.toLocaleUpperCase()}
    </p>
    <p class="bg-gray-700 py-2 px-4 rounded-md text-golden font-bold text-xl text-center">
      {formatCurrency(price)}
    </p>
  </a>
</div>
