---
import Service from "./Service.astro";
import type { ServiceType } from "@/types/services";

interface Props {
  services: ServiceType[];
}

const { services } = Astro.props;
---

<div class="container m-auto">
  <hgroup class="my-10 text-center">
    <h1 class="text-3xl text-white font-bold sm:text-5xl">Guisados</h1>
  </hgroup>

  <div class="m-4 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-5">
    {services.map((item: ServiceType) => (
      <Service
        title={item.title}
        description={item.description}
        href={item.href}
        img={item.img}
      />
    ))}
  </div>
</div>
