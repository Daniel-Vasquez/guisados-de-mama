---
import Stew from "@/components/Stew.astro";
import type { StewType } from "@/types/stews";
import Container from "@/UI/Container.astro";

interface Props {
  stews: StewType[];
}

const { stews } = Astro.props;
---

<Container title="Guisados" styles="margin-top: 3rem;">
  {stews.map((item: StewType) => (
    <Stew
      title={item.title}
      href={item.href}
      img={item.img}
      priceKilogram={item.priceKilogram || 0}
      priceHalfKilogram={item.priceHalfKilogram || 0}
      priceQuarterKilogram={item.priceQuarterKilogram || 0}
      available={item.available}
    />
  ))}
</Container>
