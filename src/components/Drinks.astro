---
import Card from "@/components/Card.astro";
import type { DrinkType } from "@/types/drinks";
import Container from "@/UI/Container.astro";

interface Props {
  drinks: DrinkType[];
}

const { drinks } = Astro.props;
---

<Container title="BEBIDAS" styles="margin-top: 3rem;">
  {drinks.map((item: DrinkType) => (
    <Card
      title={item.title}
      href={item.href}
      img={item.img}
      price={item.price || 0}
      imgSize="w-32"
    />
  ))}
</Container>
