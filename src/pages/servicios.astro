---
import Layout from "@/layouts/Layout.astro";
import { SERVICES } from "@/constants/services";
import Service from "@/components/Service.astro";
import Container from "@/UI/Container.astro";
---

<Layout
  title="Servicios"
  description="En nuestro bufete de abogados ofrecemos una amplia gama de servicios jurídicos en diferentes áreas del derecho, con un enfoque profesional y eficiente."
>
  <Container title="Servicios">
    {SERVICES.map(({ title, href, description, img }) => (
      <Service
        title={title}
        description={description}
        href={href}
        img={img}
      />
    ))}
  </Container>
</Layout>
