---
import Layout from "@/layouts/Layout.astro";
import MainBanner from "@/components/MainBanner.astro";
import Stews from "@/components/Stews.astro";
import { STEWS } from "@/constants/stews";

---

<Layout
  title="Los guisados de Mamá"
  description="En Los guisados de Mamá nos dedicamos a llevar a tu mesa los mejores platillos caseros, preparados con todo el amor y sazón que solo una mamá puede ofrecer. Nuestros guisados son elaborados con ingredientes frescos y de la mejor calidad."
>
  <MainBanner />
  <Stews stews={STEWS} />
  <p class="text-center font-semibold text-xl mb-11 max-w-sm m-auto">
    La variedad de guisados puede cambiar periódicamente.
  </p>
</Layout>
