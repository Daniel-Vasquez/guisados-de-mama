---
import Layout from "@/layouts/Layout.astro";
import { STEWS } from "@/constants/stews";
import Stew from "@/components/Stew.astro";
import Container from "@/UI/Container.astro";
---

<Layout
  title="Menú"
  description="Guisados en la Ciudad de México"
>
  <Container title="MENÚ">
    {STEWS.map(({ title, href, img, price, available }) => (
      <Stew
        title={title}
        href={href}
        img={img}
        price={price ?? 0}
        available={available}
      />
    ))}
  </Container>
</Layout>
