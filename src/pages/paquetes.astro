---
import { fade } from "astro:transitions";
import Layout from "@/layouts/Layout.astro";
import List from "@/UI/List.astro";
import { ContactButton } from "@/components/ContactButton";


const ELEMENTS_INCLUDED = [
  "1 kg de cualquier guisado.",
  "1 kg de arroz rojo o 1 kg de sopa fr√≠a.",
  "Medio de frijoles refritos.",
  "Salsa",
  "Tortillas.",
];
---

<Layout
  title="Paquete de guidado"
  description="Paquete de guidado"
  className="bg-orange"
>
  <div class="mt-36 p-3" transition:animate={fade({ duration: "0.5s" })}>
    <div class="container mx-auto">
      <h1 class="text-3xl font-bold text-center text-white mb-3 sm:text-5xl">
        Paquete de comida.
      </h1>

      <h2 class="text-2xl font-bold text-center text-white mb-3 sm:text-4xl">
        Incuye:
      </h2>

      <div class="max-w-md m-auto my-7">
        <List listIngredients={ELEMENTS_INCLUDED} />
      </div>

      <div class="flex justify-center items-center gap-1 text-2xl font-bold text-center text-white mb-3 sm:text-4xl">
        Precio: 
        <span class="text-blue text-5xl">
          $400.00
        </span>
      </div>

      <div class="text-center my-7">
        <ContactButton
          text="Ordenar"
          classButton="bg-blue text-white py-2 inline-flex px-4 rounded-lg font-semibold items-center gap-2 rounded-tl-2xl rounded-tr-lg rounded-br-2xl rounded-bl-lghover:bg-blue-light"
        />
      </div>
    </div>
  </div>
</Layout>
